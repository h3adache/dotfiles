[alias]
    l = log --format="'%C(yellow)%h%Creset  %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'"
    gl = l --graph

  # I like using the interactive mode to make complex commits
    ai = add --interactive

    c = commit
    cm = commit -m
    ca = commit -a
    cam = commit -a -m
    cl = clone

# amending the previous commit
    caa = commit -a --amend -C HEAD
    amend = commit --amend -C HEAD

# autosquash. e.g. g fix <commit sha to fix>. rebase will squash
    fix = commit --fixup

# reset
    rs = reset
    rh = reset --hard

# shortcuts for commands
    t = tag
    s = status
    d = diff
    a = add
    m = merge
    co = checkout
    b = branch -vv
    pb = !git b -vv | grep gone | cut -d' '  -f3 | xargs -r git b -D # prune branch - keeping workspace clean
    cb = checkout -b
    f = fetch --all -p
    rb = rebase
    p = pull
    pr = pull --rebase
    ph = push
    unstage = reset HEAD

# stash commands
    sl = stash list
    sa = stash push
    sd = stash drop
    sp = stash pop
    ss = stash show
